<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:gravity="center_horizontal"
    android:background="@drawable/shroomz_pelitausta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_play_header"
            android:background="@drawable/shroomz_title_h2p_v1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The game is played just like any other memory game, but with a few exceptions listed below:"
            android:textColor="#b7f940"
            android:paddingBottom="5dp"
            android:id="@+id/instructions_textview"
            android:layout_below="@id/how_to_play_header"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Combo system: you get extra points for each consecutive pair that you find in a row(2 pairs = 50, 3 pairs = 100, 4 pairs = 200, 5 pairs = 500) if you dont find a pair then the combo resets "
            android:textColor="#b7f940"
            android:id="@+id/combo_textview"
            android:layout_below="@id/instructions_textview"
            android:layout_marginBottom="5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Special cards:"
            android:textColor="#b7f940"
            android:textStyle="bold"
            android:layout_below="@id/combo_textview"
            android:id="@+id/special_cards_textview"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_play_imageview_ghost"
            android:background="@drawable/shroomz_card_ghost"
            android:layout_marginTop="5dp"
            android:layout_below="@id/special_cards_textview"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_play_imageview_demon"
            android:background="@drawable/shroomz_card_demon"
            android:layout_marginTop="90dp"
            android:layout_below="@id/special_cards_textview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_play_imageview_fart"
            android:background="@drawable/shroomz_card_fart"
            android:layout_marginTop="200dp"
            android:layout_below="@id/special_cards_textview"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/how_to_play_imageview_angel"
            android:background="@drawable/shroomz_card_angel"
            android:layout_marginTop="125dp"
            android:layout_below="@id/special_cards_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After both are found, the Ghost shroom will spook cards on each of its sides, exposing them for a short duration"
            android:id="@+id/textView4"
            android:textColor="#b7f940"
            android:layout_toRightOf="@id/how_to_play_imageview_ghost"
            android:layout_below="@id/special_cards_textview"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Demon shroom returns a pair back to the game and shuffles all the cards, if it's discovered without activating Angel shroom "
            android:id="@+id/textView6"
            android:textColor="#b7f940"
            android:layout_toRightOf="@id/how_to_play_imageview_demon"
            android:layout_below="@id/special_cards_textview"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Once Discovered the Fart shroom releases toxins that makes the other cards move around, shuffling them"
            android:id="@+id/textView7"
            android:textColor="#b7f940"
            android:layout_toRightOf="@id/how_to_play_imageview_demon"
            android:layout_below="@id/special_cards_textview"
            android:layout_marginTop="205dp"/>






        <ImageButton
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onReturnButtonClick"
            android:background="@drawable/shroomz_returnbutton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

</LinearLayout>

